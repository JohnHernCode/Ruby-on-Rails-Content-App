<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="notification is-danger">
      The form contains <%= pluralize(@user.errors.count, "error") %>.
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li class='notification is-danger is-light'><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>